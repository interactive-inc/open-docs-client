{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "build",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "noImplicitAny": true,
    "paths": { "@/*": ["./lib/*"] }
  },
  "include": ["lib/**/*.ts"]
}
